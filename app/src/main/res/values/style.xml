<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ShapeAppearanceOverlay.CornerSize10Percent" parent="">
        <item name="cornerSizeTopLeft">4%</item>
        <item name="cornerSizeTopRight">4%</item>
    </style>

    <style name="AstroGallery.TextAppearance.Title" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="AstroGallery.TextAppearance.SubTitle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AstroGallery.TextAppearance.H1" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    <style name="AstroGallery.TextAppearance.H2" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="AstroGallery.TextAppearance.H3" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AstroGallery.TextAppearance.Link" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
    </style>

    <style name="AstroGallery.SearchView.MaterialButton.Tint" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/search_view_color_selector</item>
        <item name="android:backgroundTint">?attr/colorSurface</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableTint">@color/search_view_color_selector</item>
    </style>
</resources>